{
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom",
    ],
    "target": "es2016",
    "module": "commonjs",
    "allowJs": false,
    "jsx": "preserve",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "removeComments": false,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}
